        <Button x:Name="button1" Margin="3,3,3,3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" FontSize="24" Content="Создать словарь" Background="#FFF66E58" >
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Убираем границу, чтобы сохранить вид кнопки с закругленными краями -->
                    <Setter Property="Padding" Value="10,5"/>
                    <!-- Задаем внутренний отступ для текста -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <!-- Здесь CornerRadius задает закругление краев -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

